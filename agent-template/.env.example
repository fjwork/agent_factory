# Example Environment Configuration
# Copy this file to .env and customize for your environment

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Environment
ENVIRONMENT=development

# Agent Configuration
AGENT_NAME=rootAgent
AGENT_VERSION=1.0.0
AGENT_DESCRIPTION=A configurable ADK agent with OAuth authentication
MODEL_PROVIDER=gemini
MODEL_NAME=gemini-2.5-flash
USE_VERTEX_AI=true

# OAuth Configuration
OAUTH_DEFAULT_PROVIDER=google
OAUTH_FLOW_TYPE=device_flow
OAUTH_SCOPES=openid profile email
TOKEN_STORAGE_TYPE=secret_manager

# OAuth Credentials (alternatively store in Secret Manager)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Azure OAuth (if using Azure provider)
AZURE_OAUTH_CLIENT_ID=your-azure-client-id
AZURE_OAUTH_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Okta OAuth (if using Okta provider)
OKTA_OAUTH_CLIENT_ID=your-okta-client-id
OKTA_OAUTH_CLIENT_SECRET=your-okta-client-secret
OKTA_DOMAIN=your-okta-domain

# Security Settings
OAUTH_REQUIRE_HTTPS=false
TOKEN_TTL=3600

# Dual Authentication Configuration
# Bearer token validation mode for testing:
# - "valid": Always accept bearer tokens (testing mode)
# - "invalid": Always reject bearer tokens (testing mode)
# - "jwt": Validate bearer tokens as JWTs (production mode)
BEARER_TOKEN_VALIDATION=jwt

# A2A Configuration
A2A_HOST=0.0.0.0
A2A_PORT=8001
A2A_TRANSPORT=jsonrpc
AGENT_URL=http://localhost:8001

# Cloud Run Configuration
CLOUD_RUN_SERVICE_NAME=${AGENT_NAME}
CLOUD_RUN_ALLOW_UNAUTH=true
CLOUD_RUN_CPU=1
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_MAX_INSTANCES=10

# Agent Engine Configuration
AGENT_ENGINE_DISPLAY_NAME=${AGENT_NAME}
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=5000
ENABLE_CODE_EXECUTION=false
ENABLE_SEARCH=false

# Docker Configuration
DOCKER_REGISTRY=gcr.io
IMAGE_NAME=adk-agent
IMAGE_TAG=latest

# Logging
LOG_LEVEL=INFO

# Monitoring
ENABLE_CLOUD_TRACE=true
ENABLE_CLOUD_MONITORING=true
ENABLE_CLOUD_LOGGING=true

# MCP Configuration
MCP_SERVER_URL=http://localhost:8080
TOKEN_REFRESH_THRESHOLD_MINS=15
ENABLE_WEATHER_MCP=true