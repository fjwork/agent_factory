# Simplified Template Environment Configuration
# Copy this file to .env and customize for your deployment

# Agent Configuration
AGENT_NAME=SimplifiedAgent
MODEL_NAME=gemini-2.0-flash
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# HTTPS Configuration (for production)
HTTPS_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# CORS Configuration (for development)
CORS_ENABLED=true
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Authentication (simplified - no OAuth client secrets needed)
# These are optional environment variables for auth context
DEFAULT_USER_ID=test-user
DEFAULT_PROVIDER=simplified

# Google Cloud Project (if using Google Cloud deployment)
GOOGLE_CLOUD_PROJECT=

# Production HTTPS Certificate Paths
# SSL_CERT_FILE=/etc/ssl/certs/agent.crt
# SSL_KEY_FILE=/etc/ssl/private/agent.key

# Or use Google Cloud managed certificates
# GCP_MANAGED_CERT=true